@using CetinFarshidfar.JewelryECommerce.EntityLayer.VMs.Users
@model UserLoginVM
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PANEL</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .btn-color {
            background-color: #0e1c36;
            color: #fff;
        }

        .profile-image-pic {
            height: 200px;
            width: 200px;
            object-fit: cover;
        }
        .cardbody-color {
            background-color: #ebf2fa;
        }

        a {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card my-5">
                    <div asp-validation-summary="ModelOnly" class="p-3 bg-info"></div>
                    <form class="card-body cardbody-color p-lg-5" method="post" asp-area="Management" asp-controller="PanelAuths" asp-action="Index">

                        <div class="text-center">
                            <img src="~/img/site/logo-noletter.png"
                                 alt="logo-noletter">
                        </div>

                        <div class="mb-3">
                            <b><label asp-for="Email"></label></b>
                            <input asp-for="Email" type="text" class="form-control" id="Username" aria-describedby="emailHelp">
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="mb-3">
                            <b><label asp-for="Password"></label></b>
                            <input asp-for="Password" type="password" class="form-control" id="password">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Giriş yap</button></div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
