@using CetinFarshidfar.JewelryECommerce.EntityLayer.VMs.Addresses
@model AddressModel
@{
    var title = Model.Id == 0 ? "Yeni Adres" : $"Adres Güncelleme - {Model.Title}";
}
@*
    ADDRESS CREATE OR UPDATE
*@


<form class="form" method="post" asp-area="Customer" asp-controller="User" asp-action="SaveAddress">
    <h2><i class="bi bi-house-gear"></i><span class="px-2">@title</span></h2>
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Title" class="form-label"></label>
        <div class="relative">
            <input asp-for="Title" class="form-control" id="name" autocomplete="" />
        </div>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustomerFullName" class="form-label"></label>
        <div class="relative">
            <input asp-for="CustomerFullName" class="form-control" />
        </div>
        <span asp-validation-for="CustomerFullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustomerPhone" class="form-label"></label>
        <div class="relative">
            <input asp-for="CustomerPhone" class="form-control" />
        </div>
        <span asp-validation-for="CustomerPhone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City" class="form-label"></label>
        <div class="relative">
            <input asp-for="City" class="form-control" />
        </div>
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="District" class="form-label"></label>
        <div class="relative">
            <input asp-for="District" class="form-control" />
        </div>
        <span asp-validation-for="District" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Street" class="form-label"></label>
        <div class="relative">
            <input asp-for="Street" class="form-control" />
        </div>
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Detail" class="form-label"></label>
        <div class="relative">
            <input asp-for="Detail" class="form-control" />
        </div>
        <span asp-validation-for="Detail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ZipCode" class="form-label"></label>
        <div class="relative">
            <input asp-for="ZipCode" class="form-control" />
        </div>
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>
    <div class="tright">
        <button class="movebtn movebtnca" type="button"><i class="fa fa-fw fa-xmark"></i>İptal</button>
        @if (Model.Id != 0)
        {
            <button class="movebtn movebtnre" type="button" data-id="@Model.Id"><i class="fa fa-fw fa-trash"></i>Sil</button>
        }
        <button class="movebtn movebtnsu" type="submit">Kaydet</button>
    </div>
</form>