@using CetinFarshidfar.JewelryECommerce.EntityLayer.VMs.Addresses
@model List<AddressToListVM>
@{
    ViewData["Title"] = "Addresses";
    Layout = "~/Areas/Customer/Views/Shared/_UserTabLayout.cshtml";
}

<h1><i class="bi bi-house-gear"></i><span class="px-2">Adreslerim</span></h1>

<div class="address-card-area">
    <div class="address-card" data-id="0">
        <i class="bi bi-plus-lg"></i>
    </div>
    @foreach(var address in Model){
        <div class="address-card" data-id="@address.Id">
            <span class="address-card-title">@address.Title</span>
        </div>
    }
</div>
<div id="addressFormArea" style="display: none;"></div>

@section UserScripts {
    <script src="~/js/customeraddress.js" asp-append-version="true"></script>
}